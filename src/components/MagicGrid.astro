            <div
              class="bg-blue-600 p-2 rounded-lg shadow-lg -translate-x-1/2 -mt-10"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="white"
                stroke-width="2"
                ><rect x="1" y="3" width="15" height="13"></rect><polygon
                  points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon></svg
              >
            </div>
          </div>
        </div>
        <div
          id="van-status"
          class="pt-10 text-sm font-bold text-blue-600 transition-colors"
        >
          <!-- {vanPosition < 50 ? "In Transit to Hub" : "Out for Delivery"} -->
        </div>
      </div>
    </div>

    <div
      class="group bg-white rounded-[32px] p-8 border border-slate-200 shadow-sm hover:shadow-2xl hover:shadow-purple-500/10 transition-all duration-500 bento-card"
    >
      <div
