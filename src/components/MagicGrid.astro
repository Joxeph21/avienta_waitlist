<script>
  let stockCount = 30;
  let vanPosition = 0;

  const stockText = document.getElementById("stock-text");
  const stockBar = document.getElementById("stock-bar");
  const vanTruck = document.getElementById("van-truck");
  const vanStatus = document.getElementById("van-status");

  setInterval(() => {
    stockCount = stockCount >= 99 ? 20 : stockCount + 1;

    // Update UI
    if (stockText) stockText.innerText = stockCount.toString();
    if (stockBar) {
      stockBar.style.width = `${stockCount}%`;

      stockBar.classList.remove(
        "from-red-300",
        "to-red-600",
        "from-yellow-300",
        "to-yellow-600",
        "from-[#25D366]",
        "to-[#1ea952]"
      );

      if (stockCount < 40) {
        stockBar.classList.add("from-red-300", "to-red-600");
      } else if (stockCount < 70) {
        stockBar.classList.add("from-yellow-300", "to-yellow-600");
      } else {
        stockBar.classList.add("from-[#25D366]", "to-[#1ea952]");
      }
    }
  }, 50);

  setInterval(() => {
    vanPosition = vanPosition >= 100 ? 0 : vanPosition + 1;

    if (vanTruck) {
      vanTruck.style.left = `${vanPosition}%`;
    }

    if (vanStatus) {
      vanStatus.innerText =
        vanPosition < 50 ? "In Transit to Hub" : "Out for Delivery";
      vanStatus.className =
        vanPosition < 50
          ? "text-sm font-bold text-blue-600 transition-colors"
          : "text-sm font-bold text-[#25D366] transition-colors";
    }
  }, 30);
</script>
